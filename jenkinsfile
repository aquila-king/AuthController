pipeline {
    agent any

    tools {
        maven 'mvn'
        jdk 'JDK'
    }

    environment {
        DOCKER_CREDS = credentials('docker')
    }

    stages {

        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/kuunyangna/CICD-Jenkins.git'
            }
        }

        stage('Unit Testing') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t kuunyangna/myapp-11:v2 .'
            }
        }

        stage('Push Docker Image') {
            steps {
                sh '''
                    echo $DOCKER_CREDS_PSW | docker login -u $DOCKER_CREDS_USR --password-stdin
                    docker push kuunyangna/myapp-11:v2
                    docker logout
                '''
            }
        }

        stage('Deploy to EKS') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'aws-cred',
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                )]) {
                    sh '''
                        aws eks update-kubeconfig --region us-east-1 --name mycluster-Aquila

                        kubectl apply -f k8-deployment.yaml
                        kubectl apply -f k8-service.yaml

                        kubectl set image deployment/myapp-deployment \
                        myapp-container=kuunyangna/myapp-11:v2 --record

                        kubectl rollout status deployment/myapp-deployment
                    '''
                }
            }
        }
    }
}
